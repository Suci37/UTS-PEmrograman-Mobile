<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ly_1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="213dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:src="@drawable/logo5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:text="Get Started"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:text="by creating a new account"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"
            android:hint="Full name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round"
            android:padding="19dp"
            android:inputType="text"
            android:id="@+id/name_1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="35dp"
            android:hint="Valid email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round"
            android:padding="19dp"
            android:inputType="textPassword"
            android:id="@+id/email_1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="35dp"
            android:hint="Phone number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round"
            android:padding="19dp"
            android:inputType="textPassword"
            android:id="@+id/phone_1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="35dp"
            android:hint="Create password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/round"
            android:padding="19dp"
            android:inputType="textPassword"
            android:id="@+id/password_1"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:backgroundTint="#80401D"
        android:textColor="@color/white"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="35dp"
        android:textSize="20sp"
        android:layout_below="@id/ly_1"
        android:id="@+id/register_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/register_1">

        <TextView
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_1"
            android:text="Alredy have an account ?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_1"
            android:text="Login"
            android:textColor="@color/purple_700"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>